<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/decimal_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/decimal_1"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/decimal_faq"
        android:text="@string/decimal_2"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/decimal_title"
        android:layout_centerHorizontal="true" />
    <NumberPicker
        android:id="@+id/numberPicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/decimal_faq"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/decimal_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPicker1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/numberPicker1"
        android:text="@string/decimal_3" />

    <Button
        android:id="@+id/decimal_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/deciaml_4"
        android:layout_alignBaseline="@+id/decimal_cancel"
        android:layout_alignBottom="@+id/decimal_cancel"
        android:layout_toStartOf="@+id/numberPicker1"
        android:layout_marginEnd="16dp" />

</RelativeLayout>